#!/usr/bin/env python3

import asyncio
import json
import logging
import os
import sys

from afaws.scripting import get_config

import afscripting

try:
    import blueskyaws
except:
    sys.path.insert(0, os.path.abspath(os.path.join(sys.path[0], '../')))
    import blueskyaws

##
## Args
##

REQUIRED_ARGS = [
    {'short': '-i', 'long': '--input', 'help': "input file"}
]

OPTIONAL_ARGS = []

EXAMPLES_STRING = """
Examples:

    {script} --log-level INFO -i ./dev/data/3-fires.json \\
        -c ./dev/config/simple-config.json

 """.format(script=sys.argv[0])

def parse_args():
    _, args = afscripting.args.parse_args(REQUIRED_ARGS,
        OPTIONAL_ARGS, epilog=EXAMPLES_STRING)

    logging.basicConfig(level=getattr(logging, args.log_level),
        format='%(asctime)s %(levelname)s: %(message)s')

    logging.info(" Args:")
    for k,v in args.__dict__.items():
        logging.info("   %s: %s", k, v)

    return args

##
## Load and run
##

def load(args):
    with open(args.input, 'r') as f:
        return json.loads(f.read())

async def main():
    args = parse_args()
    input_data = load(args)
    config = get_config(args)
    await blueskyaws.run(input_data, config)

if __name__ == "__main__":
    asyncio.run(main())
